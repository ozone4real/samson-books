<div class="books">

<div>
<div class="d-flex justify-content-between">
  <h3> Books </h3>
  <% if signed_in? %>
    <div> <a href="/protected/books/new"> Add new book <i class="fas fa-plus-circle fa-2x"></i> </a> </div>
  <% end %>
</div>

<div class="list-group mt-4">
  <% @books.each do |book| %>
    <div class="list-group-item d-flex justify-content-between">
    <a href=<%= "/books/#{book.id}" %>> <%= book.name %> </a>
    <% if signed_in? %>
      <div class="d-flex justify-content-between">
      <a href=<%= "/protected/books/#{book.id}/edit" %> title="edit"> <i class="fas fa-edit"></i> </a>
      <form class="delete" action=<%= "/protected/books/#{book.id}" %> method="POST">
       <input type="hidden" name="_method" value="DELETE" />
        <button data-confirm="Are you sure you want to delete this?" type="submit" href="#" title="delete" class="delete-btn"> <i class="fas fa-trash"></i> </button>
      </form>
      </div>
    <% end %>
    </div>
  <% end %>
</div>
</div>