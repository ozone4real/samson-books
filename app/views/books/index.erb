<div class="books">

<div>
<div class="d-flex justify-content-between">
  <h3> Books </h3>
  <% if signed_in? %>
    <div> <a class="btn btn-md btn-secondary" href="/books/new"> Add new book </a> </div>
  <% end %>
</div>

<div class="list-group mt-4">
  <% @books.each do |book| %>
    <div class="list-group-item d-flex justify-content-between">
    <a href=<%= "/books/#{book.id}" %>> <%= book.name %> </a>
    <a href=<%= "/books/#{book.id}/edit" %>> <i class="fas fa-edit"></i> </a>
    </div>
  <% end %>
</div>
</div>