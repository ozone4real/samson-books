<div class="form-container m-auto">
  <h3>Log in</h3>
  <form method='post' action='/login'>
    <div class="form-group">
      <label for="password" ><small><%= @error %> </small> </label>
      <input name="email" placeholder="Email" class="form-control" type="email" value= "<%= params["email"] %>"  />
    </div>
    <div class="form-group">
      <input name="password" class="form-control" placeholder="Password" value = "<%= params["password"] %>" type="password" />
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-success w-100"> Login </button>
    </div>
  </form>
</div>